<!DOCTYPE html>
<html>

<head>
  <%- include('../../includes/header.ejs') %>
  <link rel="stylesheet" type="text/css" href="/stylesheets/dash.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/scripts/adminDash.js"></script>
</head>

<body>
  <%- include('../../includes/nav.ejs') %>
  <div class="dashboard-image">
    <h1>DASHBOARD</h1>
    <h3>All sounds of the earth are like music.</h3>
    <!-- <div class="user-rank">
      <h2>Hours</h2>
    </div> -->
  </div>
  <div class="jumbotron grid-container">
    <div class="grid-item">
      <h3>USERS</h3>
      <hr>
      <% if (users.length > 0) { %>
        <% users.forEach(u => { %>
          <form action="/admin/users/<%= u._id %>" method="POST">
            <input type="hidden" value="/admin/users/<%= u._id %>" name="studentId">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" id="myToken">
            <button id="student" class="btn" type="submit"><%= u.name %></button>
          </form>
        <!-- <li id="student-list" class="student-list"><a href="/admin/users/<%= u._id %>" id="student"><%= u.name %></a></li> -->
        <% }) %>
  
      <% } else { %>
        <h5>No student signed up yet!</h5>
        <% } %>
      
    </div>
    <div class="grid-item">
      <h3>STUDENT HOURS</h3>
      <hr>
      
    </div>
    <div class="grid-item">Coming soon!</div>
  </div>
  <%- include('../../includes/end.ejs') %>